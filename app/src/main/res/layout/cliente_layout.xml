<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="#6F6750A3"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/nome_cliente_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8dp"
        android:text="Teste da silva silva"
        android:textColor="#000000"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/qtd_parcelas_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Parcelas: 15"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/parcelas_pagas_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Pagas: 10"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/parcelas_falta_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Falta: 5"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerParcelas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
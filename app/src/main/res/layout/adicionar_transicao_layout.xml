<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionar transição." />

        <EditText
            android:id="@+id/descriEdtText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:ems="10"
            android:hint="Descrição"
            android:inputType="text" />

        <EditText
            android:id="@+id/valorEdtText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:ems="10"
            android:hint="valor"
            android:inputType="number|numberDecimal|numberSigned" />

        <LinearLayout
            android:id="@+id/layoutReceita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/parcelasEdtText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="parcelas"
                android:inputType="number|numberDecimal|numberSigned" />

            <EditText
                android:id="@+id/jurozEdtText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="juro em %"
                android:inputType="number|numberDecimal|numberSigned" />

            <TextView
                android:id="@+id/resultadoCalcText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calcule previamente os juros aplicado." />

            <Button
                android:id="@+id/calcularBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Calcular juros"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioDespesa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="é uma despesa."
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioReceita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="é uma receita."
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioEmprestimo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="é um empréstimo."
                android:textColor="#000000" />

        </RadioGroup>

        <Button
            android:id="@+id/confimarBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="CONFIRMAR"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>